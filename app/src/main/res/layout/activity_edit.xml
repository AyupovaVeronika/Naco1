<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".EditActivity">

    <!-- Левая панель инструментов (фиксированная, всегда видимая) -->
    <com.example.myapplication.redactor.ToolsPanel
        android:id="@+id/tools_panel"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="#2C3E50"
        android:elevation="4dp" />

    <!-- Вертикальный разделитель -->
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#34495E" />

    <!-- Центральный холст (занимает всё оставшееся пространство) -->
    <FrameLayout
        android:id="@+id/canvas_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#ECF0F1">

        <com.example.myapplication.redactor.CanvasView
            android:id="@+id/canvas_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF" />

        <!-- Кнопка для открытия правой панели -->
        <ImageButton
            android:id="@+id/btn_toggle_right_panel"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="right|top"
            android:layout_margin="16dp"
            android:background="@drawable/circle_button"
            android:src="@android:drawable/ic_dialog_info"
            android:padding="12dp"
            android:elevation="8dp" />

    </FrameLayout>

    <!-- Вертикальный разделитель (виден только когда панель открыта) -->
    <View
        android:id="@+id/right_divider"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#34495E"
        android:visibility="gone" />

    <!-- Правая панель (слои и свойства) - компактная -->
    <LinearLayout
        android:id="@+id/right_panel"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#2C3E50"
        android:elevation="8dp"
        android:visibility="gone">

        <!-- Заголовок панели с кнопкой закрытия -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="#34495E"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ПАНЕЛЬ ИНСТРУМЕНТОВ"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <ImageButton
                android:id="@+id/btn_close_right_panel"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                app:tint="#FFFFFF" />

        </LinearLayout>

        <!-- Панель слоев -->
        <com.example.myapplication.redactor.LayersPanel
            android:id="@+id/layers_panel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- Тонкий разделитель -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1F2B36"/>

        <!-- Панель свойств -->
        <com.example.myapplication.redactor.PropertiesPanel
            android:id="@+id/properties_panel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>